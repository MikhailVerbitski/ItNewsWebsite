<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="PostId" type="hidden" class="form-control" />
            <input asp-for="SectionId" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
