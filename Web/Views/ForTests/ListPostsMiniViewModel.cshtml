@model IEnumerable<Domain.Contracts.Models.ViewModels.Post.PostMiniViewModel>

@{
    ViewData["Title"] = "ListPostsMiniViewModel";
}

<h2>ListPostsMiniViewModel</h2>


@foreach (var item in Model)
{
    @await Html.PartialAsync("UserMini_PartialView", item.AuthorUserMiniViewModel)
    <div class="container">
        <div class="row">
            <h2>@Html.DisplayFor(modelItem => item.Header) - @Html.DisplayFor(modelItem => item.Score)</h2>
        </div>
        <div class="row">
            @Html.DisplayFor(modelItem => item.BriefDesctiption)
        </div>
    </div>
    <hr/>
}
