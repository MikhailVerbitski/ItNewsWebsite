@model Domain.Contracts.Models.ViewModels.Comment.CommentCreateEditViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="CommentId" type="hidden" class="form-control" />
            <input asp-for="PostId" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>