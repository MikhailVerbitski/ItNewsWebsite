@if (StrTags != null)
{
    <ListViewTemplate Items="@Tags">
        <ItemTemplate>
            <Tag tag="@context" />
        </ItemTemplate>
    </ListViewTemplate>
}

@functions{
    [Parameter] string StrTags { get; set; } = "";
    List<string> Tags { get { return StrTags.Split(' ').ToList(); } }
}